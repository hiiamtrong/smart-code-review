#!/usr/bin/env bash
set -e

# AI Review CLI Tool
VERSION="1.0.0"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
CYAN='\033[0;36m'
NC='\033[0m' # No Color

# Paths
CONFIG_DIR="$HOME/.config/ai-review"
CONFIG_FILE="$CONFIG_DIR/config"
HOOKS_DIR="$CONFIG_DIR/hooks"
HOOK_SCRIPT="$HOOKS_DIR/pre-commit.sh"

# Hook marker to identify our hook
HOOK_MARKER="# AI-REVIEW-HOOK"

# ============================================
# Helper Functions
# ============================================

print_error() {
  echo -e "${RED}âŒ $1${NC}" >&2
}

print_success() {
  echo -e "${GREEN}âœ… $1${NC}"
}

print_warning() {
  echo -e "${YELLOW}âš ï¸  $1${NC}"
}

print_info() {
  echo -e "${BLUE}â„¹ï¸  $1${NC}"
}

check_git_repo() {
  if ! git rev-parse --is-inside-work-tree &> /dev/null; then
    print_error "Not a git repository"
    exit 1
  fi
}

check_config_exists() {
  if [[ ! -f "$CONFIG_FILE" ]]; then
    print_error "Configuration not found"
    echo "Please run the installer first or create config at: $CONFIG_FILE"
    exit 1
  fi
}

get_git_hooks_dir() {
  git rev-parse --git-dir 2>/dev/null | xargs -I {} echo "{}/hooks"
}

# ============================================
# Commands
# ============================================

cmd_install() {
  check_git_repo
  check_config_exists

  local hooks_dir=$(get_git_hooks_dir)
  local target_hook="$hooks_dir/pre-commit"

  echo -e "${BLUE}ðŸ”§ Installing AI Review hook...${NC}"

  # Create hooks directory if needed
  mkdir -p "$hooks_dir"

  # Check if hook already exists
  if [[ -f "$target_hook" ]]; then
    if grep -q "$HOOK_MARKER" "$target_hook" 2>/dev/null; then
      print_warning "AI Review hook is already installed"
      read -p "Do you want to reinstall? [y/N]: " confirm
      if [[ "$confirm" != "y" && "$confirm" != "Y" ]]; then
        echo "Aborted"
        exit 0
      fi
    else
      print_warning "A pre-commit hook already exists"
      echo "Current hook: $target_hook"
      read -p "Do you want to replace it? [y/N]: " confirm
      if [[ "$confirm" != "y" && "$confirm" != "Y" ]]; then
        echo "Aborted. Consider integrating AI Review into your existing hook."
        exit 0
      fi
      # Backup existing hook
      cp "$target_hook" "$target_hook.backup"
      print_info "Backed up existing hook to $target_hook.backup"
    fi
  fi

  # Create the hook as a wrapper that calls our script
  cat > "$target_hook" << EOF
#!/usr/bin/env bash
$HOOK_MARKER
# This hook was installed by ai-review
# To uninstall, run: ai-review uninstall

exec "$HOOK_SCRIPT" "\$@"
EOF

  chmod +x "$target_hook"

  print_success "AI Review hook installed"
  echo ""
  echo "The hook will now run on every commit."
  echo "To bypass: git commit --no-verify"
}

cmd_uninstall() {
  check_git_repo

  local hooks_dir=$(get_git_hooks_dir)
  local target_hook="$hooks_dir/pre-commit"

  echo -e "${BLUE}ðŸ”§ Uninstalling AI Review hook...${NC}"

  if [[ ! -f "$target_hook" ]]; then
    print_warning "No pre-commit hook found"
    exit 0
  fi

  # Check if it's our hook
  if ! grep -q "$HOOK_MARKER" "$target_hook" 2>/dev/null; then
    print_error "The existing pre-commit hook is not an AI Review hook"
    echo "Please remove it manually if needed: $target_hook"
    exit 1
  fi

  rm "$target_hook"
  print_success "AI Review hook removed"

  # Restore backup if exists
  if [[ -f "$target_hook.backup" ]]; then
    read -p "Restore previous hook from backup? [y/N]: " confirm
    if [[ "$confirm" == "y" || "$confirm" == "Y" ]]; then
      mv "$target_hook.backup" "$target_hook"
      print_success "Previous hook restored"
    fi
  fi
}

cmd_config() {
  local action="${1:-show}"

  case "$action" in
    show)
      if [[ ! -f "$CONFIG_FILE" ]]; then
        print_error "No configuration found"
        echo "Run the installer to create configuration"
        exit 1
      fi

      echo -e "${BLUE}ðŸ“‹ AI Review Configuration${NC}"
      echo "Location: $CONFIG_FILE"
      echo ""

      # Load and display config (mask API key)
      while IFS='=' read -r key value; do
        # Skip comments and empty lines
        [[ "$key" =~ ^[[:space:]]*# ]] && continue
        [[ -z "$key" ]] && continue

        # Remove quotes from value
        value=$(echo "$value" | sed 's/^"//;s/"$//')

        # Mask API key
        if [[ "$key" == "AI_GATEWAY_API_KEY" ]]; then
          if [[ ${#value} -gt 8 ]]; then
            masked="${value:0:4}...${value: -4}"
          else
            masked="****"
          fi
          echo "  $key: $masked"
        else
          echo "  $key: $value"
        fi
      done < "$CONFIG_FILE"
      ;;

    set)
      local key="$2"
      local value="$3"

      if [[ -z "$key" || -z "$value" ]]; then
        print_error "Usage: ai-review config set KEY VALUE"
        exit 1
      fi

      check_config_exists

      # Update or add the key
      if grep -q "^$key=" "$CONFIG_FILE"; then
        sed -i.bak "s|^$key=.*|$key=\"$value\"|" "$CONFIG_FILE"
        rm -f "$CONFIG_FILE.bak"
      else
        echo "$key=\"$value\"" >> "$CONFIG_FILE"
      fi

      print_success "Updated $key"
      ;;

    edit)
      if [[ ! -f "$CONFIG_FILE" ]]; then
        print_error "No configuration found"
        exit 1
      fi

      # Open in default editor
      ${EDITOR:-vi} "$CONFIG_FILE"
      ;;

    *)
      print_error "Unknown config action: $action"
      echo "Usage: ai-review config [show|set|edit]"
      exit 1
      ;;
  esac
}

cmd_status() {
  echo -e "${BLUE}ðŸ“Š AI Review Status${NC}"
  echo ""

  # Version
  echo "Version: $VERSION"
  echo ""

  # Config status
  echo "Configuration:"
  if [[ -f "$CONFIG_FILE" ]]; then
    print_success "Config exists at $CONFIG_FILE"

    # Check required values
    source "$CONFIG_FILE" 2>/dev/null || true
    if [[ -n "$AI_GATEWAY_URL" ]]; then
      echo "  Gateway URL: $AI_GATEWAY_URL"
    else
      print_warning "AI_GATEWAY_URL not set"
    fi

    if [[ -n "$AI_GATEWAY_API_KEY" ]]; then
      echo "  API Key: ****"
    else
      print_warning "AI_GATEWAY_API_KEY not set"
    fi
  else
    print_error "Config not found at $CONFIG_FILE"
  fi
  echo ""

  # Hook script status
  echo "Hook Script:"
  if [[ -f "$HOOK_SCRIPT" ]]; then
    print_success "Hook script installed at $HOOK_SCRIPT"
  else
    print_error "Hook script not found at $HOOK_SCRIPT"
  fi
  echo ""

  # Current repo status
  echo "Current Repository:"
  if git rev-parse --is-inside-work-tree &> /dev/null; then
    local hooks_dir=$(get_git_hooks_dir)
    local target_hook="$hooks_dir/pre-commit"

    echo "  Repo: $(basename $(git rev-parse --show-toplevel))"

    if [[ -f "$target_hook" ]]; then
      if grep -q "$HOOK_MARKER" "$target_hook" 2>/dev/null; then
        print_success "AI Review hook is installed"
      else
        print_warning "Pre-commit hook exists but is not AI Review"
      fi
    else
      print_info "No pre-commit hook installed"
      echo "  Run 'ai-review install' to enable"
    fi
  else
    print_info "Not in a git repository"
  fi
}

cmd_update() {
  echo -e "${BLUE}ðŸ”„ Updating AI Review...${NC}"

  # Download latest versions
  local REPO_URL="https://raw.githubusercontent.com/user/smart-code-review/main"
  local BIN_DIR="$HOME/.local/bin"

  # Update CLI
  echo "Downloading latest CLI..."
  if curl -sSL "$REPO_URL/scripts/local/ai-review" -o "$BIN_DIR/ai-review.new"; then
    mv "$BIN_DIR/ai-review.new" "$BIN_DIR/ai-review"
    chmod +x "$BIN_DIR/ai-review"
    print_success "CLI updated"
  else
    print_error "Failed to download CLI"
    rm -f "$BIN_DIR/ai-review.new"
    exit 1
  fi

  # Update hook script
  echo "Downloading latest hook script..."
  if curl -sSL "$REPO_URL/scripts/local/pre-commit.sh" -o "$HOOK_SCRIPT.new"; then
    mv "$HOOK_SCRIPT.new" "$HOOK_SCRIPT"
    chmod +x "$HOOK_SCRIPT"
    print_success "Hook script updated"
  else
    print_error "Failed to download hook script"
    rm -f "$HOOK_SCRIPT.new"
    exit 1
  fi

  echo ""
  print_success "Update complete!"
  echo "New version: $(ai-review --version 2>/dev/null || echo 'unknown')"
}

cmd_help() {
  cat << EOF
${CYAN}AI Review CLI${NC} - AI-powered code review for git commits

${YELLOW}USAGE:${NC}
    ai-review <command> [options]

${YELLOW}COMMANDS:${NC}
    install       Install AI Review hook in the current repository
    uninstall     Remove AI Review hook from the current repository
    config        View or modify configuration
                  - ai-review config           Show current config
                  - ai-review config set K V   Set a config value
                  - ai-review config edit      Open config in editor
    status        Show installation and configuration status
    update        Update AI Review to the latest version
    help          Show this help message

${YELLOW}OPTIONS:${NC}
    --version     Show version number

${YELLOW}EXAMPLES:${NC}
    ai-review install                    # Enable AI review for current repo
    ai-review config set AI_MODEL gpt-4  # Change AI model
    ai-review status                     # Check if everything is set up

${YELLOW}BYPASSING:${NC}
    To skip AI review for a single commit:
    git commit --no-verify -m "message"

${YELLOW}MORE INFO:${NC}
    Config location: $CONFIG_FILE
    Hook location:   $HOOK_SCRIPT

EOF
}

# ============================================
# Main
# ============================================

main() {
  local command="${1:-help}"
  shift || true

  case "$command" in
    install)
      cmd_install "$@"
      ;;
    uninstall)
      cmd_uninstall "$@"
      ;;
    config)
      cmd_config "$@"
      ;;
    status)
      cmd_status "$@"
      ;;
    update)
      cmd_update "$@"
      ;;
    help|--help|-h)
      cmd_help
      ;;
    --version|-v)
      echo "ai-review version $VERSION"
      ;;
    *)
      print_error "Unknown command: $command"
      echo "Run 'ai-review help' for usage"
      exit 1
      ;;
  esac
}

main "$@"
